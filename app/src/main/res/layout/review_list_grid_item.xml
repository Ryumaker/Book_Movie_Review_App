<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutReviewListGridItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="20dp"
    app:cardBackgroundColor="@color/light_mode_home_background"
    app:cardElevation="0dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_launcher_background"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/textNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helene Moore"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="@font/noto_sans_kr_regular" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.5"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:progressTint="#FFB400"
                style="@style/Widget.AppCompat.RatingBar.Small" />

            <TextView
                android:id="@+id/textUploadDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="June 5, 2019"
                android:textSize="11sp"
                android:textColor="#9B9B9B"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            android:textSize="14sp"
            android:fontFamily="@font/noto_sans_kr_regular" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thumb_up_emoji"
                android:textSize="14sp"
                android:layout_marginEnd="5dp" />

            <TextView
                android:id="@+id/textNumberOfThumbUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="14sp"
                android:fontFamily="@font/noto_sans_kr_regular" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>